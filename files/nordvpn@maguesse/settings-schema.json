{
    "header-nordvp-settings": {
        "type": "header",
        "description": "Nord VPN Settings"
    },
    "protocol": {
        "type" : "radiogroup",
        "default" : "UDP",
        "description": "Protocol",
        "tooltip": "Sets the protocol",
        "options": {
            "UPD": "UDP",
            "TCP": "TCP"
        }
    },
    "kill_switch": {
        "type" : "checkbox",
        "default" : false,
        "description" : "Kill Switch",
        "tooltip": "Enables or disables Kill Switch feature"
    },
    "cybersec": {
        "type" : "checkbox",
        "default" : false,
        "description" : "CyberSec",
        "tooltip": "Enables or disables CyberSec feature"
    },
    "obfuscate": {
        "type" : "checkbox",
        "default" : false,
        "description" : "Obfuscate"
    },
    "notify": {
        "type" : "checkbox",
        "default" : false,
        "description" : "Notify"
    },
    "auto-connect": {
        "type" : "checkbox",
        "default" : false,
        "description" : "Auto-Connect"
    },
    "dns": {
        "type" : "checkbox",
        "default" : false,
        "description" : "DNS"
    },
    "div01": {
        "type": "separator"
    },
    "header-applet-settings": {
        "type": "header",
        "description": "Applet Settings"
    },
    "refresh-interval": {
        "type": "spinbutton",
        "default": 5,
        "min": 1,
        "max": 3600,
        "setp": 1,
        "units": "seconds",
        "description": "Update interval",
       "tooltip": "Interval at which applet will check NordVPN status."
    } 
}
